{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/incorporation",
    "required": [
        "incorporation"
    ],
    "type": "object",
    "title": "Incorporation Filing",
    "properties": {
        "incorporation": {
            "type": "object",
            "required": [
                "nameRequest",
                "businessContact"
            ],
            "properties": {
                "nameRequest": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/name_request"
                },
                "offices": {
                    "registeredOffice": {
                        "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/office"
                    },
                    "recordsOffice": {
                        "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/office"
                    },
                    "required": [
                        "registeredOffice"
                    ]
                },
                "businessContact" : {
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "phone": {
                        "type": "number"
                    },
                    "extension": {
                        "type": "number"
                    },
                    "required": [
                        "email",
                        "phone"
                    ]
                }
            }
        }
    }
}
