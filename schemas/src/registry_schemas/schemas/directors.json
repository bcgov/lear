{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/directors",
    "type": "object",
    "title": "The Directors Schema",
    "definitions": {
        "person": {
            "type": "object",
            "properties": {
                "firstName": {
                    "type": "string",
                    "maxLength": 30
                },
                "lastName": {
                    "type": "string",
                    "maxLength": 30
                },
                "middleInitial": {
                    "type": "string",
                    "maxLength": 30
                },
                "prevFirstName": {
                    "title": "previous first name, in the case of a legal name change in a filing",
                    "type": "string",
                    "maxLength": 30
                },
                "prevLastName": {
                    "title": "previous last name, in the case of a legal name change in a filing",
                    "type": "string",
                    "maxLength": 30
                },
                "prevMiddleInitial": {
                    "title": "previous middle name, in the case of a legal name change in a filing",
                    "type": "string",
                    "maxLength": 30
                }
            },
            "required": [
                "firstName",
                "lastName"
            ]
        },
        "director": {
            "type": "object",
            "properties": {
                "officer": {
                    "$ref": "#/definitions/person"
                },
                "deliveryAddress": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
                },
                "mailingAddress": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
                },
                "title": {
                    "type": "string"
                },
                "appointmentDate": {
                    "type": "string",
                    "format": "date"
                },
                "cessationDate": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "date"
                }
            },
            "required": [
                "officer",
                "deliveryAddress",
                "appointmentDate",
                "cessationDate"
            ]
        }
    },
    "properties": {
        "directors": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/director"
            }
        }
    },
    "required": [
        "directors"
    ]
}