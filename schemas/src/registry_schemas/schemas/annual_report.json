{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/annual_report",
    "required": [
        "annualReport"
    ],
    "type": "object",
    "title": "Annual Report Filing",
    "properties": {
        "annualReport": {
            "type": "object",
            "required": [
                "annualGeneralMeetingDate",
                "certifiedBy",
                "email",
                "directors",
                "mailingAddress",
                "deliveryAddress"
            ],
            "properties": {
                "annualGeneralMeetingDate": {
                    "type": "string",
                    "format": "date"
                },
                "certifiedBy": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "format": "email"
                },
                "directors": {
                    "type": "array",
                    "items": {
                        "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/directors#/definitions/director"
                    }
                },
                "deliveryAddress": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
                },
                "mailingAddress": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
                }
            }
        }
    }
}