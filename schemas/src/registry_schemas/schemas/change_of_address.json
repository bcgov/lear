{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/change_of_address",
    "required": [
        "changeOfAddress"
    ],
    "type": "object",
    "title": "Change of Address Filing",
    "properties": {
        "changeOfAddress": {
            "type": "object",
            "required": [
                "certifiedBy",
                "email",
                "deliveryAddress",
                "mailingAddress"
            ],
            "properties": {
                "certifiedBy": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "format": "email"
                },
                "deliveryAddress": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
                },
                "mailingAddress": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
                }
            }
        }
    }
}
