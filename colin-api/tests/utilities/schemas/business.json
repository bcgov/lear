{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/root.json",
    "type": "object",
    "title": "The Businesses Schema",
    "required": [
        "business"
    ],
    "properties": {
        "business": {
            "$id": "#/properties/business",
            "type": "object",
            "title": "The Business Schema",
            "required": [
                "last_ledger_timestamp",
                "founding_date",
                "identifier",
                "legal_name"
            ],
            "properties": {
                "last_ledger_timestamp": {
                    "$id": "#/properties/business/properties/last_ledger_timestamp",
                    "type": "string",
                    "format": "date-time",
                    "title": "The timestamp of the most current ledger record.",
                    "default": "",
                    "examples": [
                        "1970-01-01T00:00:00+00:00"
                    ]
                },
                "dissolution_date": {
                    "$id": "#/properties/business/properties/dissolution_date",
                    "type": "string",
                    "format": "date",
                    "title": "The Dissolution_date Schema",
                    "default": "",
                    "examples": [
                        "1970-01-01"
                    ]
                },
                "fiscal_year_end_date": {
                    "$id": "#/properties/business/properties/fiscal_year_end_date",
                    "type": "string",
                    "format": "date",
                    "title": "The Fiscal_year_end_date Schema",
                    "default": "",
                    "examples": [
                        "1970-01-01"
                    ]
                },
                "founding_date": {
                    "$id": "#/properties/business/properties/founding_date",
                    "type": "string",
                    "format": "date-time",
                    "title": "The Founding_date Schema",
                    "default": "",
                    "examples": [
                        "1970-01-01T00:00:00+00:00"
                    ]
                },
                "identifier": {
                    "$id": "#/properties/business/properties/identifier",
                    "type": "string",
                    "title": "The Identifier Schema",
                    "default": "",
                    "examples": [
                        "CP1234567"
                    ],
                    "pattern": "^(CP)[0-9]{7}$"
                },
                "legal_name": {
                    "$id": "#/properties/business/properties/legal_name",
                    "type": "string",
                    "title": "The Legal_name Schema",
                    "default": "",
                    "examples": [
                        "legal_name"
                    ],
                    "pattern": "^(.*)$"
                },
                "tax_id": {
                    "$id": "#/properties/business/properties/tax_id",
                    "type": "string",
                    "title": "The Tax_id Schema",
                    "default": "",
                    "examples": [
                        "123456789"
                    ],
                    "pattern": "^[0-9]{9}$"
                }
            }
        }
    }
}
