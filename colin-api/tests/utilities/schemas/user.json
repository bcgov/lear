{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "User response schema",
    "type": "object",
    "properties": {
        "data": {
            "type": "object",
            "properties": {
                "type": {
                    "enum": [
                        "users"
                    ]
                },
                "id": {
                    "type": "number"
                },
                "attributes": {
                    "type": "object",
                    "properties": {
                        "email": {
                            "type": "string",
                            "format": "email"
                        },
                        "username": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "email",
                        "username"
                    ]
                }
            },
            "required": [
                "type",
                "id",
                "attributes"
            ]
        }
    },
    "additionalProperties": false,
    "required": [
        "data"
    ]
}