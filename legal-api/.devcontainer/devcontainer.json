// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"build": {
		// Path is relative to the devcontainer.json file.
		// We prebuild the image to get poetry into the image
		// This saves the user a bit of time, when re-opening containers
		"dockerfile": "Dockerfile"
	},

	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest",
			"dockerDashComposeVersion": "v2"
		}
	},
    "runArgs": ["--add-host=host.docker.internal:host-gateway"],
	// this seems to be needed on OSX, at times.
	// I have not tested it on windows, but should also work fine on Ubuntu
	"mounts": [
        {
            "source": "/var/run/docker.sock",
            "target": "/var/run/docker.sock",
            "type": "bind"
        }
    ],
	"containerEnv": {
        "PROTOCOL_BUFFERS_PYTHON_IMPLEMENTATION": "python"
	},
	"remoteEnv": {
        "PROTOCOL_BUFFERS_PYTHON_IMPLEMENTATION": "python"
	},
	// "forwardPorts": [5432],

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": ".devcontainer/commands/post-create-command.sh",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python"
			]
		}
	}

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}