-- helper so that `is_blank(text)` returns TRUE for '' (but NULL stays NULL)
create or replace function is_blank(t text)
    returns boolean
    language sql
    immutable strict
as
$$
select btrim(t) = ''
$$;

alter function is_blank
    owner to postgres;


