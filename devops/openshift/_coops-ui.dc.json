{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "bcros-coops-ui-dc",
        "annotations": {
            "template.openshift.io/bindable": "false"
        }
    },
    "parameters": [
        {
            "name": "APP_NAME",
            "displayName": "APP_NAME",
            "description": "The name of the application (grouped).",
            "required": true,
            "value": "bcros"
        },
        {
            "name": "COMP_NAME",
            "displayName": "COMP_NAME",
            "description": "The name of the application component.",
            "required": true,
            "value": "coops-ui"
        },
        {
            "name": "SUFFIX",
            "displayName": "Name",
            "description": "The name assigned to all of the frontend objects defined in this template.",
            "required": true
        },
        {
            "name": "WEB_APP_CONTEXT_PATH",
            "displayName": "WEB_APP_CONTEXT_PATH",
            "description": "The path at which web application is deployed.Context root for the web applicaton",
            "required": true,
            "value": "cooperatives"
        },
        {
            "name": "VUE_APP_API_URL",
            "displayName": "VUE_APP_API_URL",
            "description": "API URL",
            "required": false
        }, {
            "name": "VUE_APP_AUTH_URL",
            "displayName": "VUE_APP_AUTH_URL",
            "description": "AUTH URL",
            "required": false
        }, {
            "name": "VUE_APP_AUTH_API_URL",
            "displayName": "VUE_APP_AUTH_API_URL",
            "description": "AUTH API URL",
            "required": false
        }, {
            "name": "VUE_APP_PAY_API_URL",
            "displayName": "VUE_APP_PAY_API_URL",
            "description": "PAY API URL",
            "required": false
        }, {
            "name": "VUE_APP_ADDRESS_COMPLETE_KEY",
            "displayName": "VUE_APP_ADDRESS_COMPLETE_KEY",
            "description": "Address Complete Key",
            "required": false
        },
        {
            "name": "PORT",
            "value": "2015"
        },
        {
            "name": "CPU_LIMIT",
            "value": "250m"
        },
        {
            "name": "MEMORY_LIMIT",
            "value": "750Mi"
        },
        {
            "name": "CPU_REQUEST",
            "value": "100m"
        },
        {
            "name": "MEMORY_REQUEST",
            "value": "512Mi"
        },
        {
            "name": "REPLICA_MIN",
            "value": "1"
        },
        {
            "name": "REPLICA_MAX",
            "value": "1"
        }
    ],
    "objects": [{
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${COMP_NAME}",
                "labels": {
                    "shared": "true"
                },
                "annotations": {
                    "description": "Keeps track of changes in the application image"
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${COMP_NAME}-${SUFFIX}",
                "annotations": {
                    "description": "Exposes and load balances the application pods"
                }
            },
            "spec": {
                "ports": [{
                    "name": "web",
                    "port": "${{PORT}}",
                    "targetPort": "${{PORT}}"
                }],
                "selector": {
                    "name": "${COMP_NAME}-${SUFFIX}"
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${COMP_NAME}-${SUFFIX}",
                "annotations": {
                    "description": "Defines how to deploy the application server",
                    "template.alpha.openshift.io/wait-for-ready": "true"
                },
                "labels": {
                    "component": "${COMP_NAME}",
                    "app": "${APP_NAME}-${SUFFIX}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling",
                    "maxSurge": "50%",
                    "maxUnavailable": 0
                },
                "triggers": [{
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": ["coops-ui"],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${COMP_NAME}:${SUFFIX}"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": "${{REPLICA_MIN}}",
                "selector": {
                    "name": "${COMP_NAME}-${SUFFIX}"
                },
                "template": {
                    "metadata": {
                        "name": "${COMP_NAME}-${SUFFIX}",
                        "labels": {
                            "name": "${COMP_NAME}-${SUFFIX}"
                        }
                    },
                    "spec": {
                        "volumes": [{
                                "name": "coops-web-caddy-config",
                                "configMap": {
                                    "name": "coops-web-caddy-config",
                                    "defaultMode": 420
                                }
                            },
                            {
                                "name": "coops-web-ui-configuration",
                                "configMap": {
                                    "name": "coops-web-ui-configuration",
                                    "defaultMode": 420
                                }
                            }
                        ],
                        "containers": [{
                            "name": "app",
                            "image": " ",
                            "env": [{
                                    "name": "VUE_APP_API_URL",
                                    "value": "${VUE_APP_API_URL}"
                                },
                                {
                                    "name": "VUE_APP_AUTH_URL",
                                    "value": "${VUE_APP_AUTH_URL}"
                                },
                                {
                                    "name": "VUE_APP_AUTH_API_URL",
                                    "value": "${VUE_APP_AUTH_API_URL}"
                                },
                                {
                                    "name": "VUE_APP_PAY_API_URL",
                                    "value": "${VUE_APP_PAY_API_URL}"
                                },
                                {
                                    "name": "VUE_APP_ADDRESS_COMPLETE_KEY",
                                    "value": "${VUE_APP_ADDRESS_COMPLETE_KEY}"
                                }
                            ],
                            "resources": {
                                "limits": {
                                    "cpu": "${CPU_LIMIT}",
                                    "memory": "${MEMORY_LIMIT}"
                                },
                                "requests": {
                                    "cpu": "${CPU_REQUEST}",
                                    "memory": "${MEMORY_REQUEST}"
                                }
                            },
                            "ports": [{
                                "containerPort": "${{PORT}}"
                            }],
                            "livenessProbe": {
                                "failureThreshold": 30,
                                "httpGet": {
                                    "path": "/health",
                                    "port": "${{PORT}}",
                                    "scheme": "HTTP"
                                },
                                "periodSeconds": 10,
                                "successThreshold": 1,
                                "timeoutSeconds": 3
                            },
                            "readinessProbe": {
                                "failureThreshold": 30,
                                "httpGet": {
                                    "path": "/health",
                                    "port": "${{PORT}}",
                                    "scheme": "HTTP"
                                },
                                "periodSeconds": 10,
                                "successThreshold": 1,
                                "timeoutSeconds": 3
                            },
                        "volumeMounts": [{
                                "name": "coops-web-caddy-config",
                                "readOnly": true,
                                "mountPath": "/etc/Caddyfile",
                                "subPath": "Caddyfile"
                            },
                            {
                                "name": "coops-web-ui-configuration",
                                "readOnly": true,
                                "mountPath": "/var/www/html/${WEB_APP_CONTEXT_PATH}/config"
                            }
                        ],
                        "terminationMessagePath": "/dev/termination-log",
                        "terminationMessagePolicy": "File",
                        "imagePullPolicy": "Always"
                        }]
                    }
                }
            }
        },
        {
            "apiVersion": "autoscaling/v1",
            "kind": "HorizontalPodAutoscaler",
            "metadata": {
                "name": "${COMP_NAME}-${SUFFIX}",
                "labels": {
                    "name": "${COMP_NAME}-${SUFFIX}"
                }
            },
            "spec": {
                "maxReplicas": "${{REPLICA_MAX}}",
                "minReplicas": "${{REPLICA_MIN}}",
                "scaleTargetRef": {
                    "apiVersion": "v1",
                    "kind": "DeploymentConfig",
                    "name": "${COMP_NAME}-${SUFFIX}"
                },
                "targetCPUUtilizationPercentage": 95
            }
        }
    ]
}