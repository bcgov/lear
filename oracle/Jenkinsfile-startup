//JENKINS DEPLOY ENVIRONMENT VARIABLES:
// - JENKINS_JAVA_OVERRIDES  -Dhudson.model.DirectoryBrowserSupport.CSP= -Duser.timezone=America/Vancouver
//   -> user.timezone : set the local timezone so logfiles report correxct time
//   -> hudson.model.DirectoryBrowserSupport.CSP : removes restrictions on CSS file load, thus html pages of test reports are displayed pretty
//   See: https://docs.openshift.com/container-platform/3.9/using_images/other_images/jenkins.html for a complete list of JENKINS env vars
def NAMESPACE = namespace
def COMPONENT_NAME = component
def TAG_NAME = tag
def OLD_POD
def USERNAME
def PASSWORD

node {
    stage('reset oracle') {
        script {
            echo """
            Pipeline called with constants:
                - NAMESPACE: ${NAMESPACE}
                - TAG_NAME: ${TAG_NAME}
                - COMPONENT_NAME: ${COMPONENT_NAME}
            """
            openshift.withCluster() {
                openshift.withProject("${NAMESPACE}-${TAG_NAME}") {
                    def podSelector = openshift.selector('pod', [ app:"${COMPONENT_NAME}-${TAG_NAME}" ])

                    OLD_POD = podSelector.objects()[0].metadata.name
                    echo "OLD_POD: ${OLD_POD}"
                    def shutdownDb = openshift.exec(
                        OLD_POD,
                        '--',
                        "bash -c ' \
                        echo \"shutdown;\"|\"\$ORACLE_HOME/bin/sqlplus\" / as sysdba \
                        '"
                    ).actions[0].out
                    echo shutdownDb
                    def deleteORCL = openshift.exec(
                        OLD_POD,
                        '--',
                        "bash -c '\
                        rm -Rf /ORCL/*'"
                    ).actions[0].out
                    echo deleteORCL
                    try {
                        def resetORCL = openshift.exec(
                            OLD_POD,
                            '--',
                            "bash -c '\
                            cp -a /ORCL_base/. /ORCL/'"
                        ).actions[0].out
                        echo "3" + resetORCL
                    } catch (Exception e) {
                        echo e.getMessage()
                    }
                }
            }
        }
    } // end stage
    stage('deploy oracle') {
        script {
            openshift.withCluster() {
                openshift.withProject("${NAMESPACE}-${TAG_NAME}") {
                    def deploy = openshift.selector("dc", "${COMPONENT_NAME}-${TAG_NAME}")
                    def podSelector = openshift.selector('pod', [ app:"${COMPONENT_NAME}-${TAG_NAME}" ])

                    deploy.rollout().latest()
                    podSelector.untilEach {
                        def pod = it.objects()[0].metadata.name
                        echo "pod: ${pod}"

                        if (pod != OLD_POD && it.objects()[0].status.phase == 'Running' && it.objects()[0].status.containerStatuses[0].ready) {
                            echo "New pod: ${pod}"
                            sleep 80
                            // todo: make this check if database is up (currently passes no matter what)
                            try {
                                echo "${pod}"
                                return true
                            } catch (Exception e) {
                                echo "${e}"
                                return false
                            }
                        } else {
                            return false;
                        }
                    }

                }
            }
        }

    } // end stage
} // end node
