@import "theme.styl";

html, body
  min-height 100vh

html
  font-size 14px

@media (min-width 960px)
  html
    font-size 16px

body
  font-family 'Roboto', sans-serif
  font-size 1rem

h1
  margin-bottom 1rem
  line-height 2rem
  letter-spacing -0.01rem
  font-size 1.875rem
  font-weight 500

h2
  margin-bottom 0.75rem
  letter-spacing -0.01rem
  font-size 1.125rem
  font-weight 500

h3
  letter-spacing -0.01rem
  font-size 1rem
  font-weight 500

p
  margin-bottom 1.5rem
  font-size 1rem

hr
  margin-top 2rem
  margin-bottom 2rem
  border-color $gray4
  border-style solid

.container
  padding 1.25rem

.app-container.theme--light
  background $gray1

.form-input
  display flex
  border 1px solid $gray5
  width 10rem

  .prefix
    flex 0 0 auto
    width 2.5rem
    padding 0.5rem
    background-color $gray1
    border-right 1px solid $gray5
    text-align center

  input, select
    padding-left 0.5rem
    height 36px

  input
    flex 1 1 auto
    width 100%

  select
    flex 1 1 auto
    -webkit-appearance menulist

// Payment Table
.payment-section
  border 1px solid $gray5

.payment-table-container
  padding 1rem

.payment-table
  margin 0
  border-collapse collapse
  line-height 1rem
  font-size 0.8rem
  width 100%

  thead
    background #ffffff
    font-weight 400

  th
    vertical-align bottom
    font-weight 400

  tfoot
    background $gray1

  th, td
    padding 0.75rem
    border 1px solid $gray3
    text-align left

  td
    vertical-align: top

  tbody tr:nth-child(odd)
    background-color $gray0

.payment-input
  text-align right

.payment-amount-column
  width 10rem

.payment-type-column
  width 10rem

.no-wrap
  white-space nowrap

.align-right
  text-align right !important

// Loading Indicator
.loading-container
  display flex
  align-items center
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 999
  background rgba(255, 255, 255, 1)

.loading__content
  margin-top: -2rem
  flex 1 1 auto
  text-align center

.loading-msg
  margin-top 1rem
  font-weight: 600;

.fade-out
  animation fadeOut 2s forwards

@keyframes fadeOut {
  0% {
    opacity 1
  }
  80% {
    opacity 1
    display: block;
  }
  100% {
    opacity 0
    display none
    z-index -5
  }
}