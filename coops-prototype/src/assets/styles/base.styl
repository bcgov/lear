@import "theme.styl";

html, body
  min-height 100vh

html
  font-size 14px

@media (min-width 960px)
  html
    font-size 16px

body
  font-family 'Roboto', sans-serif
  font-size 1rem

h1, h2
  font-weight 500

h1
  line-height 2.25rem
  font-size 2rem

hr
  margin-top 2rem
  margin-bottom 2rem
  border-color $gray4
  border-style solid

p
  margin-bottom 1rem
  line-height 1.5rem
  font-size 1rem

.app-container.theme--light
  background $gray1

.container
  padding 1.25rem