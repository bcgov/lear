{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/address",
    "type": "object",
    "title": "The Address Schema",
    "properties": {
        "streetAddress": {
            "type": "string",
            "minLength": 2,
            "maxLength": 3
        },
        "streetAddressAdditional": {
            "type": "string",
            "maxLength": 50
        },
        "addressCity": {
            "type": "string",
            "maxLength": 40
        },
        "addressCountry": {
            "type": "string"
        },
        "addressRegion": {
            "type": "string",
            "maxLength": 2
        },
        "postalCode": {
            "type": "string",
            "maxLength": 15
        },
        "deliveryInstructions": {
            "type": "string",
            "maxLength": 80
        }
    },
    "required": [
        "streetAddress",
        "addressCity",
        "addressCountry",
        "postalCode",
        "addressRegion"
    ]
}