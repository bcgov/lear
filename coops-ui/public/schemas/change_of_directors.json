{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/change_of_directors",
    "required": [
        "changeOfDirectors"
    ],
    "type": "object",
    "title": "Change of Directors Filing",
    "definitions": {
        "actions": {
            "type": "object",
            "properties": {
                "actions": {
                    "type": "array",
                    "title": "List of actions taken on a director",
                    "items": {
                        "type": "string",
                        "enum": [
                            "appointed",
                            "ceased",
                            "nameChanged",
                            "addressChanged"
                        ]
                    }
                }
            },
            "required": [
                "actions"
            ]
        }
    },
    "properties": {
        "changeOfDirectors": {
            "type": "object",
            "required": [
                "directors"
            ],
            "properties": {
                "directors": {
                    "type": "array",
                    "items": {
                        "allOf": [
                            {
                                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/directors#/definitions/director"
                            },
                            {
                                "$ref": "#definitions/actions"
                            }
                        ]
                    }
                }
            }
        }
    }
}