// Vuetify Overrides

// Buttons
.v-btn
  min-width 0
  text-transform none
  font-weight 500

  .v-icon + span,
  span + .v-icon
    margin-left 0.25rem

.v-text-field--box .v-label--active,
.v-text-field--full-width .v-label--active,
.v-text-field--outline .v-label--active
  transform: translateY(-8px) scale(.75);

// Dialogs
.v-dialog
  margin 2rem

.v-card__title
  padding 1.25rem 1.5rem
  color $BCgovFontColorInverted
  background $BCgovBlue5
  font-size 1.5em
  font-weight 400

.v-card__text
  padding 1.5rem
  font-weight 300