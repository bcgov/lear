{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "coops-ui",
        "creationTimestamp": null
    },
    "objects": [
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "coops-ui",
                "generation": 1,
                "creationTimestamp": null,
                "labels": {
                    "app": "coops-ui",
                    "template": "caddy-dc"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling",
                    "rollingParams": {
                        "updatePeriodSeconds": 1,
                        "intervalSeconds": 1,
                        "timeoutSeconds": 600,
                        "maxUnavailable": "25%",
                        "maxSurge": "25%"
                    },
                    "resources": {},
                    "activeDeadlineSeconds": 21600
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "coops-ui"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "namespace": "gl2uos-tools",
                                "name": "coops-ui:prod"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "revisionHistoryLimit": 10,
                "test": false,
                "selector": {
                    "app": "coops-ui",
                    "deploymentconfig": "coops-ui"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "app": "coops-ui",
                            "deploymentconfig": "coops-ui"
                        }
                    },
                    "spec": {
                        "volumes": [
                            {
                                "name": "coops-web-caddy-config",
                                "configMap": {
                                    "name": "coops-web-caddy-config",
                                    "defaultMode": 420
                                }
                            },
                            {
                                "name": "coops-web-ui-configuration",
                                "configMap": {
                                    "name": "coops-web-ui-configuration",
                                    "defaultMode": 420
                                }
                            }
                        ],
                        "containers": [
                            {
                                "name": "coops-ui",
                                "args": [
                                    "/tmp/scripts/run"
                                ],
                                "ports": [
                                    {
                                        "containerPort": 2015,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {},
                                "volumeMounts": [
                                    {
                                        "name": "coops-web-caddy-config",
                                        "readOnly": true,
                                        "mountPath": "/etc/Caddyfile",
                                        "subPath": "Caddyfile"
                                    },
                                    {
                                        "name": "coops-web-ui-configuration",
                                        "readOnly": true,
                                        "mountPath": "/var/www/html/${WEB_APP_CONTEXT_PATH}/config"
                                    }
                                ],
                                "terminationMessagePath": "/dev/termination-log",
                                "terminationMessagePolicy": "File",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {},
                        "schedulerName": "default-scheduler"
                    }
                }
            },
            "status": {
                "latestVersion": 0,
                "observedGeneration": 0,
                "replicas": 0,
                "updatedReplicas": 0,
                "availableReplicas": 0,
                "unavailableReplicas": 0
            }
        }
    ],
    "parameters": [
        {
            "name": "WEB_APP_CONTEXT_PATH",
            "displayName": "WEB_APP_CONTEXT_PATH",
            "description": "The path at which web application is deployed.Context root for the web applicaton",
            "required": true,
            "value": "cooperatives"
        }
    ]
}
